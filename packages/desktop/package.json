{
  "name": "@stacksolo/desktop",
  "version": "0.1.0",
  "description": "StackSolo Desktop App - Deploy infrastructure with a single click",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@stacksolo/api": "workspace:*",
    "@stacksolo/cli": "workspace:*",
    "@stacksolo/mcp": "workspace:*",
    "@stacksolo/core": "workspace:*",
    "@stacksolo/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "dev.stacksolo.app",
    "productName": "StackSolo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../web/build",
        "to": "web",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
