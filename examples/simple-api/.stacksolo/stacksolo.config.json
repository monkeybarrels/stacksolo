{
  "project": {
    "name": "simple-api",
    "region": "us-central1",
    "gcpProjectId": "my-project",
    "backend": "cdktf",
    "secrets": [
      { "name": "api-key" }
    ],
    "networks": [
      {
        "name": "main",
        "containers": [
          {
            "name": "api",
            "image": "gcr.io/my-project/api:latest",
            "memory": "512Mi",
            "allowUnauthenticated": true,
            "env": {
              "API_KEY": "@secret/api-key"
            }
          }
        ]
      }
    ]
  }
}
