{
  "project": {
    "name": "simple-api",
    "region": "us-central1",
    "gcpProjectId": "refinery-platform-main",
    "backend": "cdktf",
    "networks": [
      {
        "name": "main",
        "functions": [
          {
            "name": "api",
            "runtime": "nodejs20",
            "entryPoint": "api",
            "memory": "256Mi",
            "allowUnauthenticated": true
          }
        ],
        "loadBalancer": {
          "name": "gateway",
          "routes": [
            { "path": "/*", "backend": "api" }
          ]
        }
      }
    ]
  }
}
